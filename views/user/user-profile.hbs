<h1>My Profile</h1>

<p>{{username}}</p>

<h3>Books</h3>
{{#each books}}

<h5>{{this.title}}</h5>
<img src="{{this.cover}}" alt="{{this.title}}">
<a href="/home/user/{{this._id}}/edit">Edit Book</a>

<form action="/home/user/{{this._id}}/delete" method="post">
<button type="submit">Delete</button>
</form>
<hr>
{{/each}}
<a href="/home/user/user-create">Create New Book</a>



<h3>Movies</h3>
{{#each movies}}

<h5>{{this.title}}</h5>
<img src="{{this.cover}}" alt="{{this.title}}">

<form action="/home/user/{{this._id}}/deletemovie" method="post">
<button type="submit">Delete</button>
</form>
<hr>
{{/each}}



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  + Movie
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Search Movie</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <form action="/home/user/movie-create" method="POST">
          <label> Title:
            <input type="text" name="search">
          </label>
     
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button  class="btn btn-primary" type="submit">Search</button>
         </form>
      </div>
    </div>
  </div>
</div>

